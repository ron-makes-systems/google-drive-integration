{
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "nodenext",
    "target": "ES2022",
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": ["./src/**/*", "./@types/**/*"]
}
